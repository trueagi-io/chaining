;; Alternative to spontaneous reduction
(: reduce (-> $a $a))
(= (reduce $term)
   (case (get-metatype $term)
     ((Symbol $term)
      (Grounded $term)
      (Variable $term)
      (Expression (case $term
                    ((() ())
                     ;; Application
                     (($f $g) (let* (($ŒΩf (reduce $f))
                                     ($ŒΩg (reduce $g)))
                                (if (and (== $ŒΩf $f) (== $ŒΩg $g))
                                    (case ($f $g)
                                      (;; Recursive steps: combinator reduction
                                       ((ùêà $x) $x) ; NEXT: fails for ($f $x)
                                       (((ùêä $x) $y) (reduce $x))
                                       ((((ùêí $x) $y) $z) (reduce (($x $z) ($y $z))))
                                       ((ùêå $x) (reduce ($x $x)))
                                       (((ùêç $x) $y) $y)
                                       (((ùêì $x) $y) (reduce ($y $x)))
                                       (((ùêñ $x) $y) (reduce (($x $y) $y)))
                                       ((((ùêÅ $x) $y) $z) (reduce ($x ($y $z))))
                                       ((((ùêÇ $x) $y) $z) (reduce (($x $z) $y)))
                                       (((ùêî $x) $y) (reduce ($y (($x $x) $y))))
                                       ;; Recursive step: Œ≤-reduction
                                       (((Œª $x $y) $z)
