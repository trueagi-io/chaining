;; Reduction rules for combinatory logic.  In the process, we
;; introduce combinators ùêå, ùêç, ùêì, ùêñ, ùêÅ, ùêÇ and ùêî.
(= (ùêà $x) $x)
(= ((ùêä $x) $y) $x)
(= (((ùêí $x) $y) $z) (($x $z) ($y $z)))
(= (ùêå $x) ($x $x))
(= ((ùêç $x) $y) $y)
(= ((ùêì $x) $y) ($y $x))
(= ((ùêñ $x) $y) (($x $y) $y))
(= (((ùêÅ $x) $y) $z) ($x ($y $z)))
(= (((ùêÇ $x) $y) $z) (($x $z) $y))
(= ((ùêî $x) $y) ($y (($x $x) $y)))
(= ((ùêí ùêä) ùêä) ùêà)
(= ((ùêí ùêà) ùêà) ùêå)
(= (ùêä ùêà) ùêç)
(= ((ùêí (ùêä (ùêí ùêà))) ùêä) ùêì)
(= ((ùêí ùêí) ùêç) ùêñ)
(= ((ùêí (ùêä ùêí)) ùêä) ùêÅ)
(= ((ùêí (ùêÅ ùêÅ ùêí)) (ùêä ùêä)) ùêÇ)
(= ((ùêÅ (ùêí ùêà)) (ùêí ùêà ùêà)) ùêî)

