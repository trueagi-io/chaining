                                         (trace! (rec-K (term $term) (clf $clf) (cnt $cnt) (dir $dir))
                                         (ùêä $clf))))
                                   (empty)))
                              (($f $g) (trace! (rec-app (term $term) (cnt $cnt) (dir $dir))
                                       ((lc2cl $f (+ 1 $cnt) L) (lc2cl $g (+ 1 $cnt) R)))))))))))
       (trace! (bas-nch (term $term) (cnt $cnt) (dir $dir)) $term)))

